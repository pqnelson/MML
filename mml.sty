% avoid making the page numbers reset in mainmatter
% https://tex.stackexchange.com/a/61473/14751
\def\pagenumbering#1{%
  %\global\c@page \@ne
  \gdef\thepage{\csname @#1\endcsname
    \c@page}}

% equation numbering
\numberwithin{equation}{section}
\ltx@IfUndefined{theHsection}{%
  \renewcommand\theequation{\arabic{equation}}
}{%
  \renewcommand{\theequation}{\theHsection\arabic{equation}}
}

\newcounter{scheme}[section]
\renewcommand\thescheme{Sch.~\arabic{scheme}}
% multi-line scheme statement
\newenvironment{scheme+}{\refstepcounter{scheme}\start@multline\st@rredtrue\tag{\thescheme}}{\endmultline\ignorespacesafterend}
% single line scheme statement
\newenvironment{scheme}{\refstepcounter{scheme}\begin{equation*}\tag{\thescheme}}{\end{equation*}\ignorespacesafterend}

\newcounter{definition}[section]
\renewcommand\thedefinition{Def.\arabic{definition}}
% multi-line definition statement
\newenvironment{definition+}{\refstepcounter{definition}\start@multline\st@rredtrue\tag{\thedefinition}}{\endmultline\ignorespacesafterend}
% single line definition statement
\newenvironment{definition}{\refstepcounter{definition}\begin{equation*}\tag{\thedefinition}}{\end{equation*}\ignorespacesafterend}


\newcounter{theorem}[section]
\renewcommand\thetheorem{\arabic{theorem}}
% multi-line theorem statement
\newenvironment{theorem+}{\refstepcounter{theorem}\start@multline\st@rredtrue\tag{\thetheorem}}{\endmultline\ignorespacesafterend}
% single line theorem statement
\newenvironment{theorem}{\refstepcounter{theorem}\begin{equation*}\tag{\thetheorem}}{\end{equation*}\ignorespacesafterend}